<Page x:Class="Exam.Pages.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Exam.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Viewbox Stretch="Uniform" >
        <Grid Background="White"  Height="450" Width="800">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="31*"/>
                <ColumnDefinition Width="69*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical">

                <Button x:Name="InAdd" Height="30" Width="200" FontSize="21" Content="Входящие" Margin=" 0 5 0 0" Click="InAdd_Click"/>
                <Button x:Name="InToday" Height="30" Width="200" FontSize="21" Content="Сегодня" Margin=" 0 5 0 0"/>
                <Button x:Name="InPres" Height="30" Width="200" FontSize="21" Content="Предстоящие" Margin=" 0 5 0 0"/>

                <Button x:Name="BtnAdd" Height="35" Width="50" Content="+" Margin=" 0 5 0 0"/>
            </StackPanel>


        </Grid>
    </Viewbox>

</Page>
